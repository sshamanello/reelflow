# ========================================
# ReelFlow - Environment Variables Example
# ========================================
# Copy this file to .env and update with your actual credentials
# ========================================

# TikTok OAuth Credentials
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# YouTube (Google) OAuth Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Cloudflare Worker Settings
SESSIONS_kv=your_kv_namespace_id
COOKIE_NAME=rf_sid
COOKIE_TTL_DAYS=30

# Optional: Debug
# DEBUG_SECRET=your_debug_secret_here
